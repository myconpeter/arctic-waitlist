<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0" />
		<title>ADMIN</title>
		<script src="https://cdn.tailwindcss.com"></script>
	</head>

	<body class="bg-gray-100 text-gray-900">
		<div class="max-w-5xl mx-auto p-6">
			<!-- Header -->
			<div class="flex justify-between items-center mb-6">
				<h1 class="text-2xl font-bold text-blue-600">All Those Waiting</h1>
				<a
					href="/"
					class="bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded-lg shadow-md">
					Logout
				</a>
			</div>

			<!-- Flash Messages -->
			<%- include ('./partials/messages') %>

			<!-- Total Users -->
			<p class="text-center text-lg font-semibold text-gray-700 mb-4">
				Total Waitlist: <strong class="text-blue-600"><%= totalUsers %></strong>
			</p>

			<!-- Table -->
			<div class="overflow-x-auto bg-white shadow-md rounded-lg">
				<table class="min-w-full border border-gray-200 divide-y divide-gray-300">
					<thead class="bg-blue-600 text-white uppercase text-sm tracking-wider">
						<tr>
							<th class="py-3 px-6 text-left">Full Name</th>
							<th class="py-3 px-6 text-left">Email</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-gray-200">
						<% waitlist.forEach(function(waitlist){ %>
						<tr class="hover:bg-gray-100">
							<td class="py-4 px-6"><%= waitlist.name %></td>
							<td class="py-4 px-6"><%= waitlist.email %></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
	</body>
</html>
